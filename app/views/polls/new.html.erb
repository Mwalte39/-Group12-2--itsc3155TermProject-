<head><link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400" rel="stylesheet"></head>
<div id = "header">
    <h1>VOTE MASTER</h1>
    <h2>A SIMPLE VOTECASTING PLATFORM<h2>
</div>

<div id = "navbar">
    <%= link_to 'CREATE NEW POLL', new_poll_url %>
    <%= link_to 'VIEW OPEN POLLS', polls_path %>
</div>

<div id = "pollForm">
    <h3>CREATE A NEW POLL:</h3>
    <div id="pollcontainer">
    <%= form_for :poll, url: polls_path do |f| %>
    
        <p id = "q">
            <%= f.text_field :question, :placeholder => "Enter Poll Name", :id => 'pollquestion' %>
        </p>
         <p id = "one">
            <%= f.text_field :answer1, :placeholder => "Option 1", :id => 'a1'%> 
        </p>
        <p id = "two">
            <%= f.text_field :answer2, :placeholder => "Option 2", :id => 'a2'%> 
        </p>
        <p id = "three">
            <%= f.text_field :answer3, :placeholder => "Option 3", :id => 'a3'%> 
        </p>
        <p id = "four">
            <%= f.text_field :answer4, :placeholder => "Option 4", :id => 'a4'%> 
        </p>
        <p>
            <%= f.submit %>
        </p>
        
    <% end %>
    </div>
</div>

<div id="footer">
    <p>
        TEAM 12
    </p>
</div>