<head><link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400" rel="stylesheet"></head>
<div id = "header">
    <h1>VOTE MASTER</h1>
    <h2>A SIMPLE VOTECASTING PLATFORM<h2>
</div>

<div id = "navbar">
    <%= link_to 'CREATE NEW POLL', new_poll_url %>
    <%= link_to 'VIEW OPEN POLLS', polls_path %>
</div>

<div id="indexbox">
    <h3 id="pollForm">OPEN POLLS:</h3>
    <div id="pollindex">
        <% @polls.each do |poll| %>
            <div class="singlepoll">
                <p>POLL: <%= poll.question %>
                
                <% if (current_user && poll.creatorID == current_user.uid) %>
                <p><%= link_to 'Manage Poll', poll_path(poll) %></p>
                <% end %>
                <p><%= link_to 'Vote', new_poll_vote_url(poll) %></p>
                <p><%= link_to 'Results', poll_vote_path(poll, poll.id) %></p>
            </div>
        <% end %>
    </div>
</div>
  
<div id="footer">
    <p>
        TEAM 12
    </p>
</div>