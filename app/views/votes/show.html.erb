<head><link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400" rel="stylesheet"></head>
<div id = "header">
    <h1>VOTE MASTER</h1>
    <h2>A SIMPLE VOTECASTING PLATFORM<h2>
</div>

<div id = "navbar">
    <%= link_to 'CREATE NEW POLL', new_poll_url %>
    <%= link_to 'VIEW OPEN POLLS', polls_path %>
</div>

<div id="resultbox">
    <div id = "results">
        <p id="titleresult">Results</p>
        <div class="option">
            <p><%= @poll.answer1 %></p>
            <br>
            <p><%= @poll.votes.where(:selection => 1).count %></p>
        </div>
        <div class="option">
            <p><%= @poll.answer2 %></p>
            <br>
            <p><%= @poll.votes.where(:selection => 2).count %></p>
        </div>
        <div class="option">
            <p><%= @poll.answer3 %></p>
            <br>
            <p><%= @poll.votes.where(:selection => 3).count %></p>
        </div>
        <div class="option">
            <p><%= @poll.answer4 %></p>
            <br>
            <p><%= @poll.votes.where(:selection => 4).count %></p>
        </div>
    </div>
</div>

<div id="footer">
    <p>
        TEAM 12
    </p>
</div>