<head><link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400" rel="stylesheet"></head>
<div id = "header">
    <h1>VOTE MASTER</h1>
    <h2>A SIMPLE VOTECASTING PLATFORM<h2>
</div>
<div id = "navbar">
    <%= link_to 'CREATE NEW POLL', new_poll_url %>
    <%= link_to 'VIEW OPEN POLLS', polls_path %>
</div>

<%= form_for([@poll, @poll.votes.build]) do |f| %>
    <%= @poll.question %>
  <p>   
        
        <div id="a1"><%= @poll.answer1 %></div>
        <%= f.radio_button :selection, '1', :checked => true %> <br>
        <div id="a2"><%= @poll.answer2 %></div>
        <%= f.radio_button :selection, '2' %> <br>
        <div id="a3"><%= @poll.answer3 %></div>
        <%= f.radio_button :selection, '3' %> <br>
        <div id="a4"><%= @poll.answer4 %></div>
        <%= f.radio_button :selection, '4' %> <br>
  </p>
  <p>
    <%= f.button :submit, name: ":poll_id", value: @poll.id %>
  </p>
<% end %>

<div id="footer">
    <p>
        TEAM 12
    </p>
</div>