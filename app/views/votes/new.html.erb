<head><link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400" rel="stylesheet"></head>
<div id = "header">
    <h1>VOTE MASTER</h1>
    <h2>A SIMPLE VOTECASTING PLATFORM<h2>
</div>
<div id = "navbar">
    <%= link_to 'CREATE NEW POLL', new_poll_url %>
    <%= link_to 'VIEW OPEN POLLS', polls_path %>
</div>

<div id="votecontainer">
    <%= form_for([@poll, @poll.votes.build]) do |f| %>
        <p>POLL: <%= @poll.question %></p>
        
        <div class="voteoption">
            <%= @poll.answer1 %>
            <%= f.radio_button :selection, '1', :checked => true %> 
        </div>
        <div class="voteoption">
            <%= @poll.answer2 %>
            <%= f.radio_button :selection, '2' %> 
        </div>
        <div class="voteoption">
            <%= @poll.answer3 %>
            <%= f.radio_button :selection, '3' %> 
        </div>
        <div class="voteoption">
            <%= @poll.answer4 %>
            <%= f.radio_button :selection, '4' %>
        </div>
        
        <p><%= f.button :submit, name: ":poll_id", value: @poll.id %></p>
    <% end %>
</div>
<div id="footer">
    <p>
        TEAM 12
    </p>
</div>